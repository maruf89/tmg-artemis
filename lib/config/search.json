    "API_URL": "http://web1.thrillist.com/solr/hyperion/get.json",

    "query": {
        "fl": "nid,node_type,title,created,body_processed,image_id.*,description,byline,score,node_type,title,description",
        "sort": "score desc",
        "qf": "title&qf=body&qf=description",
        "pf": "title^100&pf=body^5&pf=description^10",
